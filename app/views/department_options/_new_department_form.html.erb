<%= form_for :new_department, class: 'form-inline' do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Department Name", class: 'form-control' %>
  </div>
  <%= f.submit "Create Department", class: 'btn btn-primary',
    data: { confirm: 'Are you sure you want to create this department?' }  %>
<%end%>
