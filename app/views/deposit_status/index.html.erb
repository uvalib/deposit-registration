
<%= form_tag '/deposit_status', :method => 'get' do %>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group">
            <%= text_field_tag :cid_lookup, params[:cid_lookup], value: @cid_lookup, placeholder: 'Enter Computing Id...', :class => "form-control" %>
            <span class="input-group-btn">
               <button class="btn btn-success">Lookup</button>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group">
            <%= text_field_tag :created_lookup, params[:created_lookup], value: @created_lookup, placeholder: 'Enter received date...', :class => "form-control date-picker" %>
            <span class="input-group-btn">
               <button class="btn btn-success">Lookup</button>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group">
            <%= text_field_tag :exported_lookup, params[:exported_lookup], value: @exported_lookup, placeholder: 'Enter exported date...', :class => "form-control date-picker" %>
            <span class="input-group-btn">
               <button class="btn btn-success">Lookup</button>
            </span>
          </div>
        </div>
      </div>
    </div>

<% end %>

<% if @deposits.empty? == false %>
<table class="deposit-index data-table six-col display compact" cellspacing="0" width="100%">

  <%= render "header" %>

  <tbody>

  <% @deposits.each do |deposit| %>
      <%= render "deposit", deposit: deposit %>
  <% end %>

  </tbody>
</table>

<% end %>
<script>
    // enable the date picker...
    $( '.date-picker' ).datepicker({
        dateFormat: "yy-mm-dd"
    });
</script>
